<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaw.s1.hymn"
    android:background="#ff080808"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UST Hymn"
        android:id="@+id/title3"
        android:layout_marginTop="35dp"
        android:textSize="80px"
        android:typeface="serif"
        android:textColor="#fffddb02"
        android:textAlignment="center"
        android:phoneNumber="false"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="God of all Nations"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merciful Lord of our Restless Being"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweep with your Golden Lilies"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Fountain of Purest Light"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trace with the Sails of the Galleons"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Dream Beyond our Seeing"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch with the Flames of your Kindness"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Gloom of our Darkest Night"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep us in Beauty"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And Truth and Virtues Impassioned Embrace"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ever your Valiant Legions"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imbued with Unending Grace"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#ffffffff" />

</LinearLayout>